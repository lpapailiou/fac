<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.AppController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="800.0">
            <right>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="start" mnemonicParsing="false" text="go"/>
                    </children>
                </VBox>
            </right>
            <left>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER"/>
            </left>
            <center>
                <VBox prefHeight="2000.0" prefWidth="2000.0" BorderPane.alignment="CENTER">
                    <children>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="412.0" prefWidth="800.0">
                            <items>
                                <AnchorPane minHeight="0.0" minWidth="1200.0" prefHeight="100.0" prefWidth="1200.0">
                                    <children>
                                        <TextArea fx:id="input" layoutX="-1.0" layoutY="-1.0" prefHeight="200.0"
                                                  prefWidth="1200.0" text="number one = 1; print(one);"/>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="600.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0">
                                    <children>

                                        <TabPane layoutY="-2.0" prefHeight="800.0" prefWidth="1200.0"
                                                 tabClosingPolicy="UNAVAILABLE">
                                            <tabs>
                                                <Tab text="scanned tokens">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="1200.0" prefHeight="800.0"
                                                                    prefWidth="1200.0">
                                                            <children>
                                                                <TextArea fx:id="scanOut" layoutY="-2.0"
                                                                          prefHeight="800.0" prefWidth="1200.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </Tab>
                                                <Tab text="parse tree">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="1200.0" prefHeight="800.0"
                                                                    prefWidth="1200.0">
                                                            <children>
                                                                <TextArea fx:id="parseTreeOut" layoutY="-2.0"
                                                                          minHeight="800.0" prefHeight="800.0"
                                                                          prefWidth="1200.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </Tab>
                                                <Tab text="parsed code">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="1200.0" prefHeight="800.0"
                                                                    prefWidth="1200.0">
                                                            <children>
                                                                <TextArea fx:id="codeOut" layoutY="-2.0"
                                                                          prefHeight="800.0" prefWidth="1200.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </Tab>
                                                <Tab text="execution result">
                                                    <content>
                                                        <AnchorPane minHeight="0.0" minWidth="1200.0" prefHeight="800.0"
                                                                    prefWidth="1200.0">
                                                            <children>
                                                                <TextArea fx:id="executeOut" layoutY="-2.0"
                                                                          prefHeight="800.0" minWidth="1200.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                </Tab>
                                            </tabs>
                                        </TabPane>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
